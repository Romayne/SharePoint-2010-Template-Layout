<html>
<head>
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/default.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/print.css")" media="print" />
	<!--[if IE]>
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/default_ie.css")" />
	<![endif]-->
	<script type="text/javascript" language="javascript" src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"></script>
    <script type="text/javascript" language="javascript" src="@Url.Content("~/Scripts/Common/common.js")"></script>
</head>	

<body>
	<table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
		<tr>
			<td id="header">
				<div class="login_area">
					@Html.Partial("_LogOnPartial")
				</div>
				<h2>@Html.ActionLink("SharePoint Administration", "Index", "Home")</h2>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
				<div class="search_area">
					&nbsp;
				</div>
			</td>
		</tr>
		<tr>
			<td id="content">
				<table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
					<tr>
						<td id="content_header" colspan="3">
							&nbsp;
						</td>
					</tr>
					<tr>
						<td id="content_left">
                            <h2>Administration Site Menu</h2>
                            <h5>Users Administration</h5>
                            <ul>
	                            <li>@Html.ActionLink("List Users", "Index", "User")</li>
                                <li>@Html.ActionLink("Create User", "Create", "User")</li>
                            </ul>
						</td>
						<td id="content_spacer">
							&nbsp;
						</td>
						<td id="content_right">
							@RenderBody()
							<div class="page_icon">
                                @if (String.IsNullOrEmpty(ViewBag.Image))
                                {
                                    <img src="@Url.Content("~/Content/images/generic.png")" alt="Generic Content" />
                                }
                                else
                                {
                                    <img src="@ViewBag.Image" alt="Module Image" />
                                }
							</div>
							<div class="page_header">
								<span class="breadcrumb">
									@Html.ActionLink("Home", "Index", "Home") @ViewBag.Breadcrumbs
								</span>
								<h2>@ViewBag.Title</h2>
							</div>							
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td id="footer">
				Powered by [Company name]. All Rights Reserved @DateTime.Now.ToString("yyyy").
			</td>
		</tr>	
	</table>
</body>
</html>