@{
    ViewBag.Title = "List Users";
    ViewBag.Breadcrumbs = "> List Users";
    ViewBag.count = 1;
}

<table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
	<tr>
		<td>
			<div class="content_title">
                Currently viewing users who have been added to the database.
			</div>
		<td>
	</tr>
	<tr>
		<td>
			<div class="actions">
				 @Html.Partial("_Options")
			</div>
		</td>
	</tr>
	<tr>
		<td class="content_area">
	        <table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
		        <tr>
			        <td class="content_area">
				        <table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
					        <tr>
						        <td>
                                    @if (String.IsNullOrEmpty(ViewBag.error) == true)
                                    {
                                        if (ViewBag.count != 0)
                                        {
                                            { ViewBag.count = 0; }
                                            <table class="pagination" border="0" width="100%" cellspacing="0" cellpadding="0">
									            <tr>
										            <td class="images">
                                                        &nbsp;
										            </td>
                                                    <td class="summary">
                                                        &nbsp;
                                                    </td>
                                                    <td>
                                                        &nbsp;
                                                    </td>
                                                    <td valign="top">
                                                        &nbsp;
                                                    </td>
                                                    <td class="total">
                                                        &nbsp;
                                                    </td>
									            </tr>
								            </table>
                                        
								            <table class="list" border="0" width="100%" cellspacing="0" cellpadding="0">
									            <thead>
										            <tr>
											            <th width="30">&nbsp;</th>
											            <th width="130" align="left">First Name</th>
											            <th width="130" align="left">Last Name</th>
											            <th align="left">Email Address</th>
											            <th width="70" align="left">Locale</th>
											            <th width="70" align="left">Enabled</th>
											            <th width="90" align="center" class="no_print">Actions</th>
										            </tr>
									            </thead>
									            <tbody>
                                                    <tr class="tr_white record" id="record_count_1">
                                                        <td align="right">1.</td>
                                                        <td><a href="User/Details/">Romayne</a></td>
                                                        <td><a href="User/Details/">Eastmond</a></td>
                                                        <td><a href="User/Details/">info@calgarywebdev.com</a></td>
                                                        <td>en_CA</td>
                                                        <td>True</td>
                                                        <td align="center" class="no_print"><a href="/User/Edit">Edit</a> - <a href="/User/Delete">Disable</a></td>
                                                    </tr>
                                                    <tr class="tr_alt record" id="record_count_2">
                                                        <td align="right">2.</td>
                                                        <td><a href="User/Details/">Mayne</a></td>
                                                        <td><a href="User/Details/">Black</a></td>
                                                        <td><a href="User/Details/">mayneblack@gmail.com</a></td>
                                                        <td>en_FR</td>
                                                        <td>False</td>
                                                        <td align="center" class="no_print"><a href="/User/Edit">Edit</a> - <a href="/User/Delete">Enable</a></td>
                                                    </tr>
									            </tbody>
								            </table>
                                        }
                                        else
                                        {
                                            <div class="text">
                                                There are currently no users saved to the database or current search query returned no users. 
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text">
                                            <span class="error">Error: <b>@ViewBag.error</b></span>
                                        </div>
                                    }
						        </td>
					        </tr>
				        </table>
			        </td>	
		        </tr>
	        </table>
		</td>
	</tr>
</table>