@{
    ViewBag.Title = "Delete User";
    ViewBag.Breadcrumbs = "> Delete User";

    ViewBag.firstName = "Romayne";
    ViewBag.lastName = "Eastmond";
    ViewBag.primaryEmail = "info@calgarywebdev.com";
    ViewBag.status = "disable";

    //ViewBag.postback = "Romayne Eastmond - info@calgarywebdev.com";
}

<table border="0" width="100%" height="100%" cellspacing="0" cellpadding="0">
	<tr>
		<td>
			<div class="content_title">
                Use the form below to delete a user.
			</div>
		<td>
	</tr>
	<tr>
		<td>
			<div class="actions">
                @Html.Partial("_Options")
			</div>
		</td>
	</tr>
	<tr>
		<td class="content_area">
            <div class="text">
                @if (String.IsNullOrEmpty(ViewBag.postback) != true)
                {
                    <p>
                        <strong>The user (@ViewBag.postback) has been successfully modified.</strong><br />
                    </p>
                    <p>
                        Automatically redirecting to the List page.<br />
                        Or you can @Html.ActionLink("click here", "Index") to immediately go back to the List page.
                    </p>
    
                    <script src="@Url.Content("~/Scripts/Common/deletion.js")" type="text/javascript"></script>
                    <script type="text/javascript">
                        deletionRedirect('@Url.Action("Index", "User")');
                    </script>
                }
                else
                {
                    if (String.IsNullOrEmpty(ViewBag.error) == true)
                    {
                        <p>
                            Are you sure you want to @ViewBag.status this user (<strong>@ViewBag.firstName @ViewBag.lastName - @ViewBag.primaryEmail</strong>)?
                        </p>

                        using (Html.BeginForm())
                        {
                            <input type="submit" class="button" value="Save" />
                        }
                    }
                    else
                    {
                        <span class="error">Error: <b>@ViewBag.error</b></span>
                    }
                } 
            </div>
		</td>
	</tr>
</table>